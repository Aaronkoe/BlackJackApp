        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/DealerCard1"
        app:layout_constraintTop_toTopOf="@+id/DealerCard1"
        app:srcCompat="@drawable/card_red_joker" />

    <ImageView
        android:id="@+id/DealerCard4"
        android:layout_width="90dp"
        android:layout_height="110dp"
        android:layout_marginEnd="24dp"
